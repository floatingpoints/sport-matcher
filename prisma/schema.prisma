// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum GameType {
  BADMINTON
  FOOTBALL
  BASKETBALL
  FLOORBALL
  TENNIS
  SQUASH
  PADEL
  VOLLEYBALL
}

model Player {
  id            String        @id
  name          String
  email         String
  phoneNumber   String?
  managedGroups Group[]
  participants  Participant[]
  memberships   Membership[]
}

model Group {
  id          Int          @id @default(autoincrement())
  name        String
  admin       Player       @relation(fields: [adminId], references: [id])
  adminId     String
  gameType    GameType
  memberships Membership[]
}

model Membership {
  player   Player @relation(fields: [playerId], references: [id])
  group    Group  @relation(fields: [groupId], references: [id])
  playerId String
  groupId  Int

  @@id([playerId, groupId])
}

model Game {
  id           Int           @id @default(autoincrement())
  date         DateTime      @default(now())
  address      String
  capacity     Int
  totalPrice   Float         @default(0.0)
  participants Participant[]
}

model Participant {
  player   Player   @relation(fields: [playerId], references: [id])
  game     Game     @relation(fields: [gameId], references: [id])
  playerId String
  gameId   Int
  date     DateTime @default(now())

  @@id([playerId, gameId])
}
